<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/md_theme_background"
    tools:context=".UpdateStudentActivity">

    <!-- Student Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/student_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Parent Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/parent_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_name_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/parent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parent Name"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contact Number Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contact_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent_name_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_number_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Gender Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Department Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/department_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/department_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department Name"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Academic Year Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/academic_year_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/department_name_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/academic_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Academic Year"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/academic_year_layout"
        android:layout_marginTop="16dp"
        app:hintEnabled="true"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_primary"
        app:passwordToggleEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/md_theme_onBackground" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Update Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        app:icon="@drawable/update"
        android:layout_below="@id/password_layout"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp"
        android:textColor="@color/md_theme_onPrimary"
        app:backgroundTint="@color/md_theme_primary" />

    <!-- Developed by Section -->
    <TextView
        android:id="@+id/developed_by_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Developed by Saubhagyaranjan Behera"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="14sp" />
</RelativeLayout>